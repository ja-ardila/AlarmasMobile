<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alarma_hidratacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/botella_abajo"
        android:layout_width="230dp"
        android:layout_height="180dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/botella_abajo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBarAzul" />

    <View
        android:id="@+id/TopBarAzul"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:background="@drawable/top_bar_azul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fondo_hidratacion"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fondo_alarma_hidratacion_cortada"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hora" />

    <View
        android:id="@+id/botella_arriba"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:background="@drawable/botella_arriba"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/hora"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="-15dp"
        android:contentDescription="Hora alarma hidratacion"
        app:layout_constraintTop_toBottomOf="@+id/botella_abajo"
        app:srcCompat="@drawable/hora_alarma" />

    <ImageView
        android:id="@+id/aviso_alarma"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="60dp"
        android:contentDescription="Aviso alarma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hora"
        app:srcCompat="@drawable/hora_de_hidratarse" />

    <ImageView
        android:id="@+id/agua_faltante"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:contentDescription="agua faltante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aviso_alarma"
        app:srcCompat="@drawable/agua_faltante" />

    <ImageView
        android:id="@+id/boton_detener"
        android:layout_width="160dp"
        android:layout_height="61dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agua_faltante"
        app:srcCompat="@drawable/detener_alarma" />

    <View
        android:id="@+id/titulo_alarma_hidratacion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/titulo_alarma_hidratacion"
        app:layout_constraintBottom_toBottomOf="@+id/TopBarAzul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>