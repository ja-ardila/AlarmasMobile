<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resumen_caminata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumenCaminata">

    <View
        android:id="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:background="@drawable/top_bar_naranja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/titulo_caminata"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/texto_resumen"
        app:layout_constraintBottom_toBottomOf="@+id/top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/back"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@+id/titulo_caminata"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titulo_caminata" />

    <View
        android:id="@+id/fondo_montana"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/fondo_montanas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/bota_esquina"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:background="@drawable/bota_esquina"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="659dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar">

        <ImageView
            android:id="@+id/bota_morada"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:srcCompat="@drawable/bota_morada" />

        <ImageView
            android:id="@+id/label_resumen"
            android:layout_width="370dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/label_resumen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="120dp"
                android:layout_height="61dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/pasos_resumen"
                    android:layout_width="160dp"
                    android:layout_height="61dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/fondo_info_resumen_caminata" />

                <TextView
                    android:id="@+id/pasos"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:paddingVertical="6dp"
                    android:text="PASOS"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/pasos_resumen"
                    app:layout_constraintStart_toStartOf="@+id/pasos_resumen"
                    app:layout_constraintTop_toTopOf="@+id/pasos_resumen" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/kilometros"
                android:layout_width="120dp"
                android:layout_height="61dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/kilometros" />

        </LinearLayout>

        <ImageView
            android:id="@+id/minutos_resumen"
            android:layout_width="150dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/minutos" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/progreso" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="160dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_compartir"
                android:layout_width="160dp"
                android:layout_height="61dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/btn_compartir" />

            <ImageView
                android:id="@+id/btn_inicio"
                android:layout_width="160dp"
                android:layout_height="61dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/btn_inicio" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>