<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registro_caminata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroCaminata">

    <View
        android:id="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:background="@drawable/top_bar_naranja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/titulo_caminata"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/texto_caminata"
        app:layout_constraintBottom_toBottomOf="@+id/top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/back"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@+id/titulo_caminata"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titulo_caminata" />

    <View
        android:id="@+id/fondo_montana"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/fondo_montanas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/bota_esquina"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:background="@drawable/bota_esquina"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="659dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar">

        <ImageView
            android:id="@+id/label_pasos"
            android:layout_width="370dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/label_pasos" />

        <EditText
            android:id="@+id/edit_pasos"
            android:layout_width="360dp"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/fondo_azul_campo_texto"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:text="4000 PASOS" />

        <ImageView
            android:id="@+id/label_veces"
            android:layout_width="370dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/label_veces" />

        <EditText
            android:id="@+id/edit_veces"
            android:layout_width="360dp"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/fondo_azul_campo_texto"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:text="5 VECES" />

        <ImageView
            android:id="@+id/label_inicio_recordatorios"
            android:layout_width="370dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/label_inicio_recordatorio" />

        <ImageView
            android:id="@+id/set_time"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/set_time" />

        <ImageView
            android:id="@+id/label_repeticiones"
            android:layout_width="370dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/label_repetirse" />

        <EditText
            android:id="@+id/edit_repeticiones"
            android:layout_width="360dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/fondo_azul_campo_texto"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:text="2 HORAS" />

        <ImageView
            android:id="@+id/boton_guardar"
            android:layout_width="160dp"
            android:layout_height="61dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/btn_guardar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>