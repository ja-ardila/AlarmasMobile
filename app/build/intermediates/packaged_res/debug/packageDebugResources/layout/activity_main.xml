<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registro_caminata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/pantalla_alarma_hidratacion"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3DABFF"
        android:elevation="4dp"
        android:text="@string/AlarmaBtn"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fondohome"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/fondohome"
        app:layout_constraintTop_toTopOf="@+id/fondohome"
        app:layout_constraintVertical_bias="0.771" />

    <Button
        android:id="@+id/pantalla_registro_caminata"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3DABFF"
        android:elevation="4dp"
        android:text="@string/RegistroBtn"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondohome"
        app:layout_constraintVertical_bias="0.868" />

    <ImageView
        android:id="@+id/fondohome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/Home"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background1" />

    <Button
        android:id="@+id/PausaBtn"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:backgroundTint="#3DABFF"
        android:text="@string/PusaBtn"
        app:layout_constraintBottom_toBottomOf="@+id/fondohome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondohome"
        app:layout_constraintVertical_bias="0.178" />

    <Button
        android:id="@+id/HidratacionBtn"
        android:layout_width="260dp"
        android:textStyle="bold"
        android:backgroundTint="#3DABFF"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/HidratacionBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondohome"
        app:layout_constraintVertical_bias="0.278" />

    <Button
        android:id="@+id/PasosBtn"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:backgroundTint="#3DABFF"
        android:text="@string/PasosBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondohome"
        app:layout_constraintVertical_bias="0.382" />

    <Button
        android:id="@+id/CronometroBtn"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:backgroundTint="#3DABFF"
        android:text="@string/Cronometro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fondohome"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.579" />

    <Button
        android:id="@+id/WalkBtn"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:backgroundTint="#3DABFF"
        android:text="@string/Caminata"
        app:layout_constraintBottom_toBottomOf="@+id/fondohome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondohome"
        app:layout_constraintVertical_bias="0.679" />

    <Button
        android:id="@+id/ProgresoBtn"
        android:layout_width="260dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#3DABFF"
        android:text="@string/ProgresoBtn"
        app:layout_constraintBottom_toBottomOf="@+id/fondohome"
        app:layout_constraintEnd_toEndOf="@+id/fondohome"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondohome"
        app:layout_constraintVertical_bias="0.478" />

    <TextView
        android:id="@+id/HOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Home"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondohome"
        app:layout_constraintVertical_bias="0.076" />

</androidx.constraintlayout.widget.ConstraintLayout>